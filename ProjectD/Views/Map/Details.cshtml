@model MapViewModel

<h1 class="gold-1 mb-5 text-center">@Model.Name</h1>

<section class="map-details">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="p-0">
                <div class="car bg-navy text-white mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="card-body p-4 text-center">
                            <h6>Information</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1 ">
                                <div class="col-4 mb-3">
                                    <h6>Name</h6>
                                    <p class="text-muted font-weight-bold">@Model.Name</p>
                                </div>
                                <div class="col-4 mb-3">
                                    <h6>Length</h6>
                                    <p class="text-muted">@Model.LengthKm km</p>
                                </div>
                                <div class="col-4 mb-3">
                                    <h6>BestTime</h6>
                                    <p class="text-muted">@Model.BestTime</p>
                                </div>
                            </div>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1 justify-content-center">
                                <div class="col-6 mb-3">
                                    <h6>Events - @Model.Events.Count()</h6>
                                    @foreach (var mapEvent in @Model.Events)
                                    {
                                        <p class="text-muted">@mapEvent.Title</p>
                                    }
                                </div>
                            </div>
                            <hr class="mt-0 mb-4">
                            <div class="d-flex">
                                <a href="#!" class="m-auto"><i class="btn fas fa-pencil-alt btn-info"></i></a>
                                <a href="#!" class="m-auto"><i class="btn fas fa-trash btn-danger"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="map-container container-fluid mt-5">
        <iframe src="https://www.google.com/maps/embed/v1/directions?origin=@Model.StartLongitude,@Model.StartLatitude&destination=@Model.FinishLongitude,@Model.FinishLatitude&zoom=14&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8">
        </iframe>
    </div>
</section>

@section Scripts {
    <script src="~/js/hideFooter.js"></script>
}
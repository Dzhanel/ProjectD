@model EventViewModel

<section class="mb-5">
            <h1 class="gold-1 mb-3 text-center">@Model.Title</h1>
    <div class="container">
        <div class="row align-items-left card bg-light-navy text-white text-center">
            <div class="ml-3">
                <h6 class="lead mt-3">@Model.Type</h6>
                <hr class="mb-2">
                <div>
                    <h5>Conditions</h5>
                    <p class="text-muted">@Model.Conditions</p>
                </div>
                <hr class="mb-2">
                <h5>Description</h5>
                <p class="text-center mr-4 text-muted">@Model.Description</p>
                <hr class="mt-0 mb-2 mt-2">
            </div>
            <div class="row justify-content-center">
                <div class="d-flex mb-2 mt-2">
                    <a href="#!" class="m-auto"><i class="btn fas fa-pencil-alt btn-info"></i></a>
                    <a asp-controller="Map" asp-action="Details" asp-route-id="@Model.Map.Id" class="btn btn-warning">
                        <i class="fas fa-map"></i> Map: @Model.Map.Name
                    </a>
                    <a href="#!" class="m-auto"><i class="btn fas fa-trash btn-danger"></i></a>
                </div>
            </div>
        </div>
        <div class="card-footer bg-navy">
            <div data-event-date="@Model.EventDate" id="@("flipdown-" + @Model.Id)" class="flipdown m-auto">
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script src="~/lib/flipdown/dist/flipdown.js"></script>
<script src="~/js/timer.js"></script>

}
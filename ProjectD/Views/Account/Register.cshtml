@using ProjectD.Models.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section id="registerForm" class="bg">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-light-navy text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">@ViewData["Title"]</h2>
                            <p class="text-white-50 mb-5">Please enter registration info!</p>
                            <form id="loginForm" method="post">
      
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="@Model.FirstName" id="typeEmailX" class="form-control form-control-lg" />
                                    <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="@Model.LastName" id="typeEmailX" class="form-control form-control-lg" />
                                    <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="@Model.Email" id="typeEmailX" class="form-control form-control-lg" />
                                    <label asp-for="@Model.Email" class="form-label" for="typeEmailX">Email</label>
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="@Model.Password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label asp-for="@Model.Password" class="form-label" for="typePasswordX">Password</label>
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="@Model.PasswordRepeat" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label asp-for="@Model.PasswordRepeat" class="form-label" for="typePasswordX">Repeat Password</label>
                                    <span asp-validation-for="@Model.PasswordRepeat" class="text-danger"></span>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                            </form>
                           <div asp-validation-summary="All" class="text-danger"></div>
                        </div>

                        <div>
                            <p class="mb-0">
                                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-white-50 fw-bold">Sign In</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    footer {
        display: none;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
